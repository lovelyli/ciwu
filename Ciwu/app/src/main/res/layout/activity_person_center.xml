<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_person_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/person_bg"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:clickable="false"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                >
                <com.example.iningke.ciwu.view.CircleImageView
                    android:layout_width="@dimen/icon_height_77"
                    android:layout_height="@dimen/icon_height_77"
                    android:src="@drawable/test_head"
                    android:id="@+id/circleImageView" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_10"
                    android:textColor="@color/gray"
                    android:text="愤怒的小鸟"
                    android:layout_margin="8dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/ll_favourate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textsize_10"
                            android:textColor="@color/gray"
                            android:text="喜欢"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textsize_10"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/gray"
                            android:text="6"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/gray"/>
                    <LinearLayout
                        android:id="@+id/ll_footer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textsize_10"
                            android:textColor="@color/gray"
                            android:text="足迹"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textsize_10"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/gray"
                            android:text="7"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_corner_shap"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/icon_height_30"
                        android:layout_height="@dimen/icon_height_30"
                        android:src="@drawable/person_share"
                        android:layout_margin="15dp"
                        android:padding="3dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/content_textsiz"
                        android:text="分享应用"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="@dimen/icon_height_30"
                        android:layout_height="@dimen/icon_height_30"
                        android:layout_margin="8dp"
                        android:src="@drawable/icon_next"
                        android:padding="3dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/icon_height_30"
                        android:layout_height="@dimen/icon_height_30"
                        android:src="@drawable/peson_evaluate"
                        android:layout_margin="15dp"
                        android:padding="3dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/content_textsiz"
                        android:text="评价我们"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="@dimen/icon_height_30"
                        android:layout_height="@dimen/icon_height_30"
                        android:layout_margin="8dp"
                        android:src="@drawable/icon_next"
                        android:padding="3dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/icon_height_30"
                        android:layout_height="@dimen/icon_height_30"
                        android:src="@drawable/person_clear"
                        android:layout_margin="15dp"
                        android:padding="3dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/content_textsiz"
                        android:text="清理缓存"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/content_textsiz"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="9.96M"
                        />
                    <ImageView
                        android:layout_width="@dimen/icon_height_30"
                        android:layout_height="@dimen/icon_height_30"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/icon_next"
                        android:padding="3dp"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_corner_shap"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/icon_height_30"
                        android:layout_height="@dimen/icon_height_30"
                        android:src="@drawable/person_feedback"
                        android:layout_margin="15dp"
                        android:padding="3dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/content_textsiz"
                        android:text="意见反馈"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="@dimen/icon_height_30"
                        android:layout_height="@dimen/icon_height_30"
                        android:layout_margin="8dp"
                        android:src="@drawable/icon_next"
                        android:padding="3dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/icon_height_30"
                        android:layout_height="@dimen/icon_height_30"
                        android:src="@drawable/person_help"
                        android:layout_margin="15dp"
                        android:padding="3dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/content_textsiz"
                        android:text="常见问题"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="@dimen/icon_height_30"
                        android:layout_height="@dimen/icon_height_30"
                        android:layout_margin="8dp"
                        android:src="@drawable/icon_next"
                        android:padding="3dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/icon_height_30"
                        android:layout_height="@dimen/icon_height_30"
                        android:src="@drawable/person_about"
                        android:layout_margin="15dp"
                        android:padding="3dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/content_textsiz"
                        android:text="关于此物"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/content_textsiz"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="V5.0"
                        />
                    <ImageView
                        android:layout_width="@dimen/icon_height_30"
                        android:layout_height="@dimen/icon_height_30"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/icon_next"
                        android:padding="3dp"
                        />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_textsiz"
                android:textColor="@color/red_selector"
                android:text="退出登录"
                android:background="@drawable/white_corner_shap"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="400dp"
                android:scrollbars="none"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
