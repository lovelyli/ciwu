<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_single_pop_container"
    >
    <RadioGroup
        android:id="@+id/item_single_pop_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:background="@color/gray_light1"
        >
        <LinearLayout
            android:id="@+id/item_single_pop_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_textsiz"
                android:textColor="@color/gray"
                android:text="默认排序"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_textsiz"
                android:textColor="@color/black"
                android:text="排序"
                android:visibility="invisible"
                />
            <RadioButton
                android:layout_width="@dimen/icon_height_20"
                android:layout_height="@dimen/icon_height_20"
                android:button="@null"
                android:background="@drawable/radio_single_sort_selector"
                android:checked="false"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_light2"
            />
        <LinearLayout
            android:id="@+id/item_single_pop_low2h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_textsiz"
                android:textColor="@color/gray"
                android:text="价格从低到高"
                />
            <RadioButton
                android:layout_width="@dimen/icon_height_20"
                android:layout_height="@dimen/icon_height_20"
                android:button="@null"
                android:background="@drawable/radio_single_sort_selector"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_light2"
            />
        <LinearLayout
            android:id="@+id/item_single_pop_h2low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_textsiz"
                android:textColor="@color/gray"
                android:text="价格从高到低"
                />
            <RadioButton
                android:layout_width="@dimen/icon_height_20"
                android:layout_height="@dimen/icon_height_20"
                android:button="@null"
                android:background="@drawable/radio_single_sort_selector"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>


    </RadioGroup>

</FrameLayout>